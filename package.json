{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint": "^5.13.0",
    "eslint-plugin-vue": "^5.2.1",
    "lerna": "^3.11.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "fix": true,
          "singleQuote": true,
          "semi": false,
          "trailingComma": "none"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  }
}
